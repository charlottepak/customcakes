<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title><% title %></title>
</head>
<body>
    <nav>
        <a href="/" <%- title === 'Home' ? 'class="active"' : '' %>>HOME</a>
        <a href="/orders" <%- title === 'View Orders' ? 'class="active"' : '' %>>VIEW ORDERS</a>
    </nav>
 

 <% if (orders.length) { %>
    <table>
      <thead>
        <tr>
          <th>Size</th>
          <th>Cake Flavor</th>
          <th>Ice Cream Base</th>
          <th>Ice Cream Flavor</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(function(o) { %>
          <tr>
            <td><%= o.size %></td>
            <td><%= o.cakeFlavor %></td>
            <td><%= o.baseType %></td>
            <td><%= o.flavor %></td>
              <td>
                <form action="/orders/<%= o.id %>?_method=DELETE"
                class="delete-form" method="POST">
                 <button type="submit">X</button>
              </form>
              <a href="/orders/<%= o.id %>/edit">Edit Cake</a>
              </form>
              </td>
          </tr>
        
        <% }); %>
        
      </tbody>
    </table>
  <% } else { %>
    <h5>No Orders Yet</h5>
  <% } %>

