 <% if (orders.length) { %>
    <table>
      <thead>
        <tr>
          <th>Size</th>
          <th>Cake Flavor</th>
          <th>Ice Cream Base</th>
          <th>Ice Cream Flavor</th>
          <button type="submit">Delete</button>
          
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(function(o) { %>
          <tr>
            <td>
              <form action="/orders/<%= o.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">X</button>
              </form>
            </td>
            <td><%= o.size %></td>
            <td><%= o.cakeFlavor %></td>
            <td><%= o.baseType %></td>
            <td><%= o.flavor %></td>
          </tr>
          

        <% }); %>
        
      </tbody>
    </table>
  <% } else { %>
    <h5>No Orders Yet</h5>
  <% } %>

